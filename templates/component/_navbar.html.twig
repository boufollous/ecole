<div class="nk-header nk-header-fixed is-light">
    <div class="container-fluid">
        <div class="nk-header-wrap">
            <div class="nk-menu-trigger d-xl-none ml-n1">
                <a href="#" class="nk-nav-toggle nk-quick-nav-icon" data-target="sidebarMenu">
                    <em class="ni ni-menu"></em>
                </a>
            </div>
            <div class="nk-header-brand d-xl-none">
                <a href="{{ path('admin_index') }}" class="logo-link">
                    École
                </a>
            </div>

            <div class="nk-header-tools">
                <ul class="nk-quick-nav">
                    {% if app.user %}
                        <li class="dropdown user-dropdown">
                            <a href="#" class="dropdown-toggle mr-n1" data-toggle="dropdown" aria-expanded="false">
                                <div class="user-toggle">
                                    <div class="user-avatar sm"><em class="ni ni-user-alt"></em></div>
                                    <div class="user-info d-none d-xl-block">
                                        <div class="user-status user-status-verified">{{ app.user.roles | first }}</div>
                                        <div class="user-name dropdown-indicator">{{ app.user.name }}</div>
                                    </div>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-md dropdown-menu-right">
                                <div class="dropdown-inner user-card-wrap bg-lighter d-none d-md-block">
                                    <div class="user-card">
                                        <div class="user-avatar">
                                            <span><em class="ni ni-user"></em></span>
                                        </div>
                                        <div class="user-info">
                                            <span class="lead-text">{{ app.user.name }}</span>
                                            <span class="sub-text">{{ app.user.email }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-inner">
                                    <ul class="link-list">
                                        {#  list des actions rapide #}
                                    </ul>
                                </div>
                                <div class="dropdown-inner">
                                    <ul class="link-list">
                                        <li>
                                            <a href="{{ logout_url('main') }}" title="Déconnexion" aria-label="Déconnexion">
                                                <em class="ni ni-signout"></em>
                                                <span>Déconnexion</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>
